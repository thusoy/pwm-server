server {
    listen 80;
    server_name pwm.local;
    charset utf-8;
    return 301 https://pwm.local$request_uri;
}

server {
    listen 443;
    server_name pwm.local;
    charset utf-8;

    ssl on;
    ssl_certificate ssl/pwm.local.crt;
    ssl_certificate_key ssl/pwm.local.key;
    ssl_client_certificate ssl/ca-chain.crt;
    ssl_verify_client on;
    ssl_verify_depth 2;

    location / {
        proxy_pass http://127.0.0.1:5000;
        include proxy_params;
    }
}
